    "version": "0.2.0",
    "configurations": [
        {
            "name": "Data Collection",
            "type": "python",
            "request": "launch",
            "module": "positronic.data_collection_zen",
            "args": [
                "--ui=@positronic.cfg.ui.spacemouse",
                "--env=@positronic.cfg.env.roboarm",
                "--env.arm=@positronic.cfg.hardware.roboarms.kinova",
            ],
            "justMyCode": true
        },
        {
            "name": "teleop module",
            "type": "python",
            "request": "launch",
            "module": "teleop",
            "justMyCode": true
        },
        {
            "name": "dhgrp module",
            "type": "python",
            "request": "launch",
            "module": "hardware.dhgrp",
            "justMyCode": true
        },
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Python: Test Ports",
            "type": "python",
            "request": "launch",
            "module": "pytest",
            "args": [
                "tests/test_ports.py",
                "-v"
            ],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Python: Visualise Dataset",
            "type": "python",
            "request": "launch",
            "module": "training.visualise_dataset",
            "args": [
                "--rerun=127.0.0.1:9876",
                "_dataset/4.pt"
            ],
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Python: Convert to LeRobot Dataset",
            "type": "python",
            "request": "launch",
            "module": "training.to_lerobot",
            "args": [
                "input_dir=/tmp/dataset/",
                "output_dir=/tmp/lerobot_ds/"
            ],
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Kinematics Debug",
            "type": "python",
            "request": "launch",
            "module": "positronic.tools.kinematics_debug",
            "args": [
                "--input_filename=/Users/vertix/Downloads/twist-ik.rrd",
                "--rerun=kinematics.rrd",
            ],
            "console": "integratedTerminal",
            "justMyCode": false
        }
    ]
}